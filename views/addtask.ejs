<!DOCTYPE html>
<html lang="en">
<head>
    <% include partials/head %>
</head>
<body class="container">

    <header>
        <% include partials/header %>
    </header>

    <main>
        <div class="row">
						<% include partials/error %>
            <div class="col-md-12">
							<div class="panel panel-default">
								<div class="panel-heading">
									<h3 class="panel-title">Create Task</h3>
								</div>
								<div class="panel-body">
									<form class="form-horizontal" method="POST" action="/admin/add_task" autocomplete="false">

					<div class="form-group">
                    	<label for="inputName" class="col-sm-2 control-label">Task Name</label>
                    	<div class="col-sm-10">
                    		<input type="text" class="form-control" id="inputName" placeholder="Task Name" name="inputName" autofill="false">
                    	</div>
                    </div>

                    <div class="form-group">
                        <label for="inputSummary" class="col-sm-2 control-label">Task Summary</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" rows="2" class="form-control" id="inputSummary" placeholder="Task Summary" name="inputSummary" autofill="false"></textarea>
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="inputDesc" class="col-sm-2 control-label">Task Description</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" rows="3" class="form-control" id="inputDesc" placeholder="Task Description" name="inputDesc" autofill="false"></textarea>
                        </div>
                    </div>

                    <% levels = [ "Beginner","Intermediate","Adept","Elite" ]; %>
                    
										<div class="form-group">
                    	<label for="inputDifficulty" class="col-sm-2 control-label">Difficulty</label>
                    	<div class="col-sm-10">
												<select class="form-control" id="inputDifficulty" name="inputDifficulty">
													<% for ( i in levels ) { %>
													<option value "<%= i + 1 %>"><%= levels[i] %></option>
													<% } %>
												</select>
                    	</div>
                    </div>

										<div class="form-group">
											<div class="col-sm-offset-2 col-sm-10">
												<button type="submit" class="btn btn-default">Create</button>
											</div>
										</div>

									</form>
							  </div>
							</div>

            </div>
          </div>
    </main>

    <footer>
        <% include partials/footer %>
    </footer>

</body>
</html>

