<!DOCTYPE html>
<html lang="en">
<head>
    <% include partials/head %>
</head>
<body class="container">

    <header>
        <% include partials/header %>
    </header>

    <main>
        <div class="row">
						<% include partials/error %>
            <div class="col-md-12">
							<div class="panel panel-default">
								<div class="panel-heading">
									<h3 class="panel-title">Create User</h3>
								</div>
								<div class="panel-body">
									<form class="form-horizontal" method="POST" action="/admin/add_user" autocomplete="false">

										<div class="form-group">
                    	<label for="inputFullName" class="col-sm-2 control-label">Full Name</label>
                    	<div class="col-sm-10">
                    		<input type="text" class="form-control" id="inputFullName" placeholder="Full Name" name="inputFullName" autofill="false">
                    	</div>
                    </div>

										<div class="form-group">
                    	<label for="inputUsername" class="col-sm-2 control-label">Username</label>
                    	<div class="col-sm-10">
                    		<input type="text" class="form-control" id="inputUsername" placeholder="Username" name="inputUsername" autofill="false">
                    	</div>
                    </div>

										<div class="form-group">
                    	<label for="inputPassword" class="col-sm-2 control-label">Password</label>
                    	<div class="col-sm-10">
                    		<input type="password" class="form-control" id="inputPassword" placeholder="password" name="inputPassword" autofill="false">
                    	</div>
                    </div>

                    <div class="form-group">
                      <div class="col-sm-offset-2 col-sm-10">
                        <div class="checkbox">
                          <label>
                            <input checked type="checkbox" name="inputValid" value="false"> Requires reset
                          </label>
                        </div>
                      </div>
                    </div>

										<div class="form-group">
                    	<label for="inputSchool" class="col-sm-2 control-label">School</label>
                    	<div class="col-sm-10">
												<select class="form-control" id="inputSchool" name="inputSchool">
													<% for ( sKey in schools ) { %>
													<option value="<%= sKey %>"><%= schools[sKey].name %></option>
													<% } %>
												</select>
                    	</div>
                    </div>

										<div class="form-group">
                    	<label for="inputAccess" class="col-sm-2 control-label">Access Level</label>
                    	<div class="col-sm-10">
												<select class="form-control" id="inputAccess" name="inputAccess">
													<option selected value="1">Student</option>
													<option value="3">Teacher</option>
													<% if ( user.access >= 5 ) { %><option value="5">Manager</option><% } %>
													<% if ( user.access >= 7 ) { %><option value="7">Local Administrator</option><% } %>
													<% if ( user.access == 10 ) { %><option value="10">System Administrator</option><% } %>
												</select>
                    	</div>
                    </div>

										<div class="form-group">
                    	<label for="inputTeacher" class="col-sm-2 control-label">Teacher</label>
                    	<div class="col-sm-10">
												<select class="form-control" id="inputTeacher" name="inputTeacher">
													<% for ( uKey in users ) { %>
                       		<% if ( ( users[uKey].school == user.school || user.access >= 10 ) &&  ( users[uKey].access >= 3 ) ) {  %><option value="<%= uKey %>"><%= users[uKey].name %></option><% } %>
                        	<% } %>
												</select>
                    	</div>
                    </div>


										<div class="form-group">
											<div class="col-sm-offset-2 col-sm-10">
												<button type="submit" class="btn btn-default">Create</button>
											</div>
										</div>

									</form>
							  </div>
							</div>

            </div>
          </div>
    </main>

    <footer>
        <% include partials/footer %>
    </footer>

</body>
</html>
