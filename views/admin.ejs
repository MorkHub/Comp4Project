<!DOCTYPE html>
<html lang="en">
<head>
  <title>Admin panel</title>
  <% include partials/head %>
</head>
<body class="container">

    <header>
        <% include partials/header %>
    </header>

    <main>
        <div class="row">
          <% include partials/error %>
          <% if ( user_id == undefined ) { %>
            <div class="col-sm-12">
              <div class="alert alert-success" role="alert"><strong>Not signed ion!</strong> please sign in!</div>
            </div>
            <% include partials/login %>
          <% } else { %>
            <div class="col-sm-12">
          <% } %>
                <div class="jumbotron">
                    <h1>Admin Panel</h1>
                    <p>Welcome to the admin panel, <%= user.name %></p>
                </div>
              <% for ( sKey in schools ) { %>
                <div class="panel panel-default">
                  <div class="panel-heading">
                    <h3 class="panel-title"><%= schools[sKey].name %><span class="pull-right"><%= sKey %></span></h3>
                  </div>
                  <table class="table">
                    <tr>
                      <td>Name</td>
                      <td>Email</td>
                      <td>Password</td>
                      <td>Access Level</td>
                    </tr>
                    <% for ( uKey in users ) { %>
                      <% if ( users[uKey].school == sKey ) { %>
                        <tr>
                          <td><a href="/user/<%= users[uKey].username %>"><%= users[uKey].name %></a></td>
                          <td><%= users[uKey].email %></td>
                          <td><%= users[uKey].password %></td>
                          <td><%= users[uKey].access %></td>
                        </tr>
                      <% } %>
                    <% } %>
                  </table>
                </div>
              <% } %>
            </div>
          </div>
        </div>
    </main>

    <footer>
        <% include partials/footer %>
    </footer>

</body>
</html>
